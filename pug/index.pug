//- Main page of the app. Rendered HTML is decided by user login status

include mixins.pug

doctype html
html
  +pageHead()

  body
    +topMenu("index")
    +appTitle()

    +createButton(isAuth)

    div.container
      div.row
        div.col-md-2
        div.col-md-8
          h2 Polls
          ul#list-of-polls.list-group
        div.col-md-2

    +appFooter()

    script(type="text/javascript" src="/common/ajax-functions.js")
    script(type="text/javascript" src="/controllers/userController.client.js")
    script(type="text/javascript" src="/controllers/pollController.client.js")

